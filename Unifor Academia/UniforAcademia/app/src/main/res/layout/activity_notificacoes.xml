<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_notificacoes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353434"
    android:fitsSystemWindows="true"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".Notificacoes">

    <!-- Cabeçalho: título + ícone -->
    <TextView
        android:id="@+id/tvTituloNotificacoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="?android:attr/homeAsUpIndicator"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:padding="8dp"
        android:text="Notificações"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/icSino"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="Ícone de Notificações"
        android:src="@drawable/ic_sino"
        app:layout_constraintTop_toTopOf="@id/tvTituloNotificacoes"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Lista de notificações rolável -->
    <ScrollView
        android:id="@+id/svNotificacoes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloNotificacoes"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llListaNotificacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Notificação 1 -->
            <LinearLayout
                android:id="@+id/itemNotificacao1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icLamp1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_lamp"
                    android:contentDescription="Ícone Lâmpada Notificação"/>

                <TextView
                    android:id="@+id/tvTextoNotificacao1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ideia nova para o seu app! Confira as dicas."
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/icCheck1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_check"
                    android:contentDescription="Aprovar Notificação"/>

                <ImageView
                    android:id="@+id/icClose1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close"
                    android:contentDescription="Fechar Notificação"/>
            </LinearLayout>

            <!-- Notificação 2 -->
            <LinearLayout
                android:id="@+id/itemNotificacao2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icLamp2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_lamp"
                    android:contentDescription="Ícone Lâmpada Notificação"/>

                <TextView
                    android:id="@+id/tvTextoNotificacao2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sua aula começa em 30 minutos"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/icCheck2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_check"
                    android:contentDescription="Aprovar Notificação"/>

                <ImageView
                    android:id="@+id/icClose2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close"
                    android:contentDescription="Fechar Notificação"/>
            </LinearLayout>

            <!-- “Ver mais” -->
            <TextView
                android:id="@+id/tvMais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior de navegação -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:background="#5B5757"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Início -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonInicio"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_home2"/>

                <TextView
                    android:id="@+id/text_Inicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Início"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Chamar Prof -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonProf"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_chama_prof"/>

                <TextView
                    android:id="@+id/text_Chama_Prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chamar Prof"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Menu -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonMenu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_menu"/>

                <TextView
                    android:id="@+id/text_Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>
