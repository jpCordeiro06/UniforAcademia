<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clDesempenho"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fitsSystemWindows="true"
    android:paddingTop="?attr/actionBarSize">

    <!-- Conteúdo principal -->
    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título "Desempenho" -->
        <TextView
            android:id="@+id/tvTituloDesempenho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="?android:attr/homeAsUpIndicator"
            android:drawablePadding="8dp"
            android:drawableTint="@android:color/white"
            android:gravity="center"
            android:text="Desempenho"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Botão de seleção de período -->
        <Button
            android:id="@+id/btnSelecionarPeriodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#1A237E"
            android:drawableLeft="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="8dp"
            android:text="Selecionar período"
            android:textColor="#FFFFFF"/>

        <!-- Métricas em cards horizontais -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="#1E1E1E"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvFrequencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequência: 80%"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#1E1E1E"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvTempoTreino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempo de treino: 04h00"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Peso -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Peso (kg): 72"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <!-- Gráfico de Peso -->
        <ImageView
            android:id="@+id/ivGraficoPeso"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="24dp"
            android:background="#1E1E1E"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_grafico_peso"/>

        <!-- IMC -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="IMC: 22.4"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <!-- Gráfico de IMC -->
        <ImageView
            android:id="@+id/ivGraficoIMC"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#1E1E1E"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_grafico_imc"/>

    </LinearLayout>

    <!-- Barra inferior de navegação -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#5B5757"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Início -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonInicio"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_home2"/>

                <TextView
                    android:id="@+id/text_Inicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicio"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Chamar Prof -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonProf"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_chama_prof"/>

                <TextView
                    android:id="@+id/text_Chama_Prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chamar Prof"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Menu -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonMenu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_menu"/>

                <TextView
                    android:id="@+id/text_Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>
