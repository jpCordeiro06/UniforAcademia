<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clMenuPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353434"
    android:fitsSystemWindows="true"
    android:paddingTop="?attr/actionBarSize">

    <!-- Título da tela -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Lista de opções rolável -->
    <ScrollView
        android:id="@+id/svMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Administrador -->
            <LinearLayout
                android:id="@+id/MenuAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgAdmin"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_admin"
                    android:contentDescription="Administrador"/>

                <TextView
                    android:id="@+id/tvMenuAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administrador"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Configurações -->
            <LinearLayout
                android:id="@+id/MenuConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgConfig"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_config"
                    android:contentDescription="Configurações"/>

                <TextView
                    android:id="@+id/tvMenuConfig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configurações"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Acessibilidade -->
            <LinearLayout
                android:id="@+id/MenuAcessibilidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgAcessibilidade"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_acessibilidade"
                    android:contentDescription="Acessibilidade"/>

                <TextView
                    android:id="@+id/tvMenuAcessibilidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acessibilidade"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Plano de Treino -->
            <LinearLayout
                android:id="@+id/MenuPlanoTreino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgTreino"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_treino"
                    android:contentDescription="Plano de Treino"/>

                <TextView
                    android:id="@+id/tvMenuPlanoTreino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plano de Treino"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Frequência -->

            <!-- Quant. Pessoas -->
            <LinearLayout
                android:id="@+id/MenuQuantPessoas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgQuantPessoas"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_quant"
                    android:contentDescription="Quant. Pessoas"/>

                <TextView
                    android:id="@+id/tvMenuQuantPessoas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quant. Pessoas"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Tutor IA -->
            <LinearLayout
                android:id="@+id/MenuTutorIA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgTutorIA"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_tutor"
                    android:contentDescription="Tutor IA"/>

                <TextView
                    android:id="@+id/tvMenuTutorIA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor IA"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Agendar Avaliação -->
            <LinearLayout
                android:id="@+id/MenuAgendarAvaliacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgAgendar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_agendar"
                    android:contentDescription="Agendar Avaliação"/>

                <TextView
                    android:id="@+id/tvMenuAgendarAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agendar Avaliação"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Aulas -->
            <LinearLayout
                android:id="@+id/MenuAulas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgAulas"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_aulas"
                    android:contentDescription="Aulas"/>

                <TextView
                    android:id="@+id/tvMenuTreinos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aulas"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Assinaturas (novo) -->
            <LinearLayout
                android:id="@+id/MenuAssinaturas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgAssinaturas"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_assinaturas"
                    android:contentDescription="Assinaturas"/>

                <TextView
                    android:id="@+id/tvMenuAssinaturas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assinaturas"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Ajuda -->
            <LinearLayout
                android:id="@+id/MenuAjuda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgAjuda"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_ajuda"
                    android:contentDescription="Ajuda"/>

                <TextView
                    android:id="@+id/tvMenuAjuda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ajuda"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior de navegação -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView2"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:background="#5B5757"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Início -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonInicio"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_home2"/>

                <TextView
                    android:id="@+id/text_Inicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Início"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Chamar Prof -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonProf"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_chama_prof"/>

                <TextView
                    android:id="@+id/text_Chama_Prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chamar Prof"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Menu -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonMenu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_menu"/>

                <TextView
                    android:id="@+id/text_Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>

