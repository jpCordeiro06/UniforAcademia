<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#2C2C2C"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvItemNomeAula"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Spinning AvanÃ§ado"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnItemRemoverAula"/>

        <TextView
            android:id="@+id/tvItemHorarioAula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D3D3D3"
            android:textSize="14sp"
            tools:text="18:00-19:00"
            app:layout_constraintTop_toBottomOf="@id/tvItemNomeAula"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvItemDiasAula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D3D3D3"
            android:textSize="14sp"
            tools:text="SEG, QUA, SEX"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/tvItemHorarioAula"
            app:layout_constraintStart_toEndOf="@id/tvItemHorarioAula"
            app:layout_constraintBottom_toBottomOf="@id/tvItemHorarioAula"/>

        <TextView
            android:id="@+id/tvItemInstrutorAula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D3D3D3"
            android:textSize="14sp"
            tools:text="Instrutor: Carlos"
            app:layout_constraintTop_toBottomOf="@id/tvItemHorarioAula"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvItemVagasAula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D3D3D3"
            android:textSize="14sp"
            tools:text="Vagas: 5/20"
            app:layout_constraintTop_toBottomOf="@id/tvItemInstrutorAula"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/>

        <ImageButton
            android:id="@+id/btnItemRemoverAula"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            app:tint="#FF6B6B"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Remover Aula"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/btnItemEditarAula"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="#82B1FF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Editar Aula"
            app:layout_constraintTop_toBottomOf="@id/btnItemRemoverAula"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>