<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clChamarProfessor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353434"
    android:fitsSystemWindows="true"
    android:paddingTop="?attr/actionBarSize">

    <!-- Título "Chamar Prof." -->
    <TextView
        android:id="@+id/tvTituloChamarProf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="?android:attr/homeAsUpIndicator"
        android:drawablePadding="8dp"
        android:drawableTint="@android:color/white"
        android:text="Chamar Prof."
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Pergunta em card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPergunta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#454545"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloChamarProf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Deseja chamar o professor?"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Botões Sim / Não -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSimChamar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="Sim"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        app:strokeColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/cardPergunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnNaoChamar"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNaoChamar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:text="Não"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        app:strokeColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/cardPergunta"
        app:layout_constraintStart_toEndOf="@id/btnSimChamar"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Barra inferior de navegação -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#5B5757"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Início -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonInicio"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_home2"/>

                <TextView
                    android:id="@+id/text_Inicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Início"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Chamar Prof -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonProf"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_chama_prof"/>

                <TextView
                    android:id="@+id/text_Chama_Prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chamar Prof"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Menu -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imgButtonMenu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_menu"/>

                <TextView
                    android:id="@+id/text_Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>
